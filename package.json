{
  "name": "inzicht-coach",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "build": "expo export --platform web --output-dir dist",
    "build:pages": "npm run build && node scripts/postbuild-pages.mjs",
    "dev": "expo start --web",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "deploy:push": "node scripts/deploy-push.mjs",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rimraf dist build node_modules/.cache",
    "prebuild": "npm run clean && npm run typecheck && npm run lint",
    "postinstall": "expo install --fix",
    "validate": "npm run typecheck && npm run lint && npm run format:check",
    "prepare": "husky install",
    "analyze": "expo export --platform web --output-dir dist --dump-assetmap",
    "bundle:analyze": "npx expo export --platform web --output-dir dist && npx webpack-bundle-analyzer dist/static/js/*.js"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@supabase/supabase-js": "^2.56.0",
    "@tanstack/react-query": "^5.85.5",
    "ajv": "^8.17.1",
    "eslint-config-expo": "^9.2.0",
    "expo": "~53.0.22",
    "expo-av": "~15.1.7",
    "expo-notifications": "~0.31.4",
    "expo-router": "^5.1.4",
    "expo-secure-store": "~14.2.4",
    "expo-status-bar": "~2.2.3",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-native": "0.79.6",
    "react-native-safe-area-context": "5.4.0",
    "react-native-url-polyfill": "^2.0.0",
    "react-native-web": "^0.21.1",
    "tailwindcss": "^3.4.17",
    "twrnc": "^4.9.1",
    "zod": "^4.1.3",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@types/jest": "^29.5.0",
    "@types/react": "~19.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-expo": "^53.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,md}": [
      "prettier --write"
    ]
  },
  "private": true
}
